@model PhotoCommunity2025.Models.User

@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация</h2>

<form method="post">
    <div>
        <label asp-for="FirstName">Имя:</label>
        <input asp-for="FirstName" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="LastName">Фамилия:</label>
        <input asp-for="LastName" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="MiddleName">Отчество:</label>
        <input asp-for="MiddleName" />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Login">Логин:</label>
        <input asp-for="Login" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password">Пароль:</label>
        <input asp-for="Password" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Cameras">Список камер:</label>
        <input asp-for="Cameras" required />
        <span asp-validation-for="Cameras" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Lenses">Список объективов:</label>
        <input asp-for="Lenses" required />
        <span asp-validation-for="Lenses" class="text-danger"></span>
    </div>
    <div>
        <button type="submit">Зарегистрироваться</button>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        <span style="color:red;">@ViewData.ModelState.Values.First().Errors.First().ErrorMessage</span>
    </div>
}