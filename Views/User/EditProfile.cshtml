@model PhotoCommunity2025.Models.User

<h2>Редактировать профиль</h2>

<form method="post" asp-action="EditProfile">
    <input type="hidden" asp-for="UserId" /> <!-- Скрытое поле для идентификатора пользователя -->

    <div>
        <label asp-for="FirstName">Имя:</label>
        <input asp-for="FirstName" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="LastName">Фамилия:</label>
        <input asp-for="LastName" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="MiddleName">Отчество:</label>
        <input asp-for="MiddleName" required />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Login">Логин:</label>
        <input asp-for="Login" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password">Пароль:</label>
        <input asp-for="Password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Cameras">Список камер:</label>
        <input asp-for="Cameras" required />
        <span asp-validation-for="Cameras" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Lenses">Список объективов:</label>
        <input asp-for="Lenses" required />
        <span asp-validation-for="Lenses" class="text-danger"></span>
    </div>

    <div>
        <button type="submit">Сохранить изменения</button>
    </div>
</form>

<form method="post" asp-action="DeleteAccount">
    <input type="hidden" asp-for="UserId" />
    <div>
        <button type="submit" style="color:red;">Удалить аккаунт</button>
    </div>
</form>

